// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement()) @map("id")
  userId   String  @unique @map("userId")
  name    String   @map("name")
  regDate DateTime @default(now()) @map("createDate")
  foods   Food[]

  @@map("user")
}

model Food {
  id          Int       @id @default(autoincrement()) @map("id")
  category    Int       @map("category")
  name        String    @map("name")
  mainAddress String?   @default("") @map("mainAddress")
  subAddress  String?   @default("") @map("subAddress")
  description String?   @default("") @map("description")
  visitDate   DateTime? @map("visitDate")
  writer      User      @relation(fields: [writerId], references: [id])
  writerId    Int       @map("writerId")
  attach      Attach[] 

  @@map("food")
}

model Attach {
  id          Int         @id @default(autoincrement()) @map("id")
  type        String      @map("type")
  name        String      @map("name")
  createDate  DateTime?   @default(now()) @map("createDate")
  food        Food        @relation(fields: [typeId], references: [id])
  typeId      Int         @map("typeId")
  
  @@map("attach")
}